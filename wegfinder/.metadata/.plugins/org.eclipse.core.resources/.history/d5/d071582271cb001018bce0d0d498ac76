package com.wegapplikation.config.controller;

import java.util.concurrent.ThreadLocalRandom;

public class GameState {

	  private final int[][] pixelArray;
	  private final int ex, ey, sx, sy; /** Start and Endpositions **/
	  private Direction catDir = null; /**direction **/

	  public GameState(int[][] pixelArray) { /**initilazing of a new object for a new route**/
	    this.pixelArray = pixelArray;
	    this.ex = 0;
	    this.ey = 0;
	    this.sx = 0;
	    this.sy = 0;	  
	  }

	  public GameState(int[][] pixelArray, int ex, int ey, int sx, int sy, Direction catDir) { 	/****/
	    this.pixelArray = pixelArray;
	    this.ex = ex;
	    this.ey = ey;
	    this.sx = sx;
	    this.sy = sy;
	    this.catDir = catDir;
	  }	
	 
	 public GameState withStartEnd(int ex, int ey, int sx, int sy) {			/**Place the Start and Endpoint**/
			  return new GameState(this.pixelArray, ex, ey, sx, sy, null);
		  }
	 
	  public GameState withMoveCat(Direction dir) {
	    return new GameState(
	        this.pixelArray, this.ex, this.ey, this.sx + dir.getDx(), this.sy + dir.getDy(), dir);
	  }

	  public int[][] getpixelArray() {
	    return pixelArray;
	  }

	  public int getex() {
	    return ex;
	  }

	  public int getey() {
	    return ey;
	  }

	  public int getsx() {
	    return sx;
	  }

	  public int getsy() {
	    return sy;
	  }

	  public Direction getCatDir() {
	    return catDir;
	  }

	  public boolean isStarttheEnd() {		/**check if the End and the current position are the same**/
	    return sx == ex && sy == ey;
	  }

	}